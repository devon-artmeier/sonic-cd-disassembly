; ------------------------------------------------------------------------------
; Align
; ------------------------------------------------------------------------------
; PARAMETERS:
;	bound - Size boundary
;	value - (OPTIONAL) Value to pad with
; ------------------------------------------------------------------------------

align macro bound, value
	local	pad
	pad: = ((\bound)-((*)%(\bound)))%(\bound)
	if narg>1
		dcb.b	pad, \value
	else
		dcb.b	pad, 0
	endif
	endm

